
<form id="form-chat" style="display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    background-color: rgb(199, 199, 178);">
  <h3 style="margin-top: 30px;">Chat</h3>
  <input style="width: 304px;
    height: 54px;
    margin-bottom: 30px;"
    id="username"
    type="text"
    placeholder="Username"
    required
  />
  <input style="width: 305px;
    height: 68px;"
    id="text"
    type="text"
    placeholder=""
    required
  />
  <button type="submit" style="margin-top: 30px;">Enviar</button>
  <hr />
  <div id="chat" class="div-chat"></div>
  <hr />
</form>